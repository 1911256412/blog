<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.he.mapper.ArticleMapper">
    <resultMap id="articleMap" type="com.he.entity.Article">
        <id column="id" property="id"/>
        <result column="author_id" property="authorId"/>
        <result column="comment_counts" property="commentCounts"/>
        <result column="create_date" property="createDate"/>
        <result column="summary" property="summary"/>
        <result column="title" property="title"/>
        <result column="view_counts" property="viewCounts"/>
        <result column="weight" property="weight"/>
        <result column="body_id" property="bodyId"/>
        <result column="category_id" property="categoryId"/>
    </resultMap>
    <select id="listArch" resultType="com.he.entity.Archives">
SELECT FROM_UNIXTIME(create_date/1000,'%Y') AS YEAR ,FROM_UNIXTIME(create_date/1000,'%m')
 AS MONTH, COUNT(*) AS COUNT  FROM article GROUP BY  YEAR ,MONTH
    </select>

    <select id="selectListPage" resultMap="articleMap">
        select * from article
        <where>
            <if test="categoryId !=null ">
            category_id=#{categoryId}
            </if>
            <if test="year != null and year.length>0 || month !=null and month.length>0 ">
                and ( FROM_UNIXTIME(create_date/1000,'%Y') = #{month}
                and FROM_UNIXTIME(create_date/1000,'%m') = #{year})
            </if>
            <if test="tagId !=null">
                and id in (select article_id from article_tag where tag_id=#{tagId})
            </if>
        </where>
        order by create_date,weight desc
    </select>

</mapper>